<div class="item_details span8 center">
  <h3 class="place-title"><%= this.model.get('title') %></h3>
  <img src="
    <%= this.model.get('photo_orig') %>
    " alt="place" class="place" />

  <div class="big-notes">
    <h4>Notes</h4>
    <% if (this.model.get('notes') === "") { %>
          No notes entered.
    <% } %>
    <%= this.model.get('notes') %>
  </div>

  <div class="tag-info">
    <h4>Tags</h4>
   <% var tags = this.model.get('tag_list') %>
   <% for(i=0; i < tags.length; i++) { %>
     <a href="#" class="tag">
       <%= tags[i] %>
     </a>
   <% } %>
  </div>
</div>
